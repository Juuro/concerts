// Prisma schema for concerts multi-tenant application
// https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// Better Auth Models
// ============================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified Boolean   @default(false)
  name          String?
  image         String?
  username      String?   @unique
  isPublic      Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Better Auth relations
  sessions Session[]
  accounts Account[]

  // Concert relations
  concerts Concert[]

  @@map("user")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id                    String    @id @default(cuid())
  userId                String
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  idToken               String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("verification")
}

// ============================================
// Application Models
// ============================================

model Concert {
  id         String   @id @default(cuid())
  userId     String
  date       DateTime
  latitude   Float
  longitude  Float
  city       String?
  club       String?
  isFestival Boolean  @default(false)
  festivalId String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user     User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  festival Festival?    @relation(fields: [festivalId], references: [id])
  bands    ConcertBand[]

  @@index([userId])
  @@index([date])
  @@map("concert")
}

model Band {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  imageUrl  String?
  // Last.fm cached data
  lastfmUrl String?
  genres    String[] // Array of genre strings
  bio       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  concerts ConcertBand[]

  @@index([name])
  @@map("band")
}

model Festival {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  url       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  concerts Concert[]

  @@map("festival")
}

model ConcertBand {
  id          String  @id @default(cuid())
  concertId   String
  bandId      String
  isHeadliner Boolean @default(false)
  sortOrder   Int     @default(0)

  concert Concert @relation(fields: [concertId], references: [id], onDelete: Cascade)
  band    Band    @relation(fields: [bandId], references: [id])

  @@unique([concertId, bandId])
  @@map("concert_band")
}
